                <option value="WA">WA</option>
                <option value="WV">WV</option>
                <option value="WI">WI</option>
                <option value="WY">WY</option>
            </select>
        </p>

        <p>
            <select id="entityTypes" name="searchTerm" style="display:none;">
                <option value="ghost">Ghost</option>
                <option value="bigfoot">Bigfoot</option>
                <option value="alien">Alien</option>
            </select>
        </p>

        <p>
            <label for="searchTerm" id="searchLabel" style="display:none;">Search for:</label>
            <input type="text" name="searchTerm" id="searchBox" style="display:none;" />
        </p>

        <input type="submit" value="Search" />
    </form>

    <hr />

    <p>
        @if (ViewBag.entityList != null)
        {
            foreach (var entity in ViewBag.entityList)
            {
                <table class="listOfEntities">
                    <tr>
                        <th>Name</th>
                        <td>@entity.Name</td>
                    </tr>
                    <tr>
                        <th>City /<br>General Location</th>
                        <td>@entity.City</td>
                    </tr>
                    <tr>
                        <th>State</th>
                        <td>@entity.State</td>
                    </tr>
                    @*<tr>
                            <th>Description</th>
                            <td>@entity.Description</td>
                        </tr>*@

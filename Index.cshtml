<head>
    <script type="text/javascript">function lookForType(searchType) {
            if (searchType.value == "state") {
                document.getElementById("stateChoices").style.display = "block";
            }
            else if (searchType.value == "type") {
                document.getElementById("entityTypes").style.display = "block";
            }
            else if (searchType.value == "name" || searchType.value == "city" || searchType.value == "all"){
                document.getElementById("searchBox").style.display = "block";
                document.getElementById("searchLabel").style.display = "block";
            }
            else {
                document.getElementById("stateChoices").style.display = "none";
                document.getElementbyId("entityTypes").style.display = "none";
                document.getElementById("searchBox").style.display = "none";
            }
        }</script>
</head>

<div class="container body-content">

    <h1>@ViewBag.title</h1>

    <form action="/search/results" method="post">
        <h2>Search by:</h2>
        <p>
            <select onchange="lookForType(this)">
                @*@foreach (var column in ViewBag.columns)
                    {
                            <option name="searchType" id="@column.Key" value="@column.Key">@column.Value</option>
                    }*@
                <option name="searchType" id="all" value="all">All</option>
                <option name="searchType" id="name" value="name">Name</option>
                <option name="searchType" id="city" value="name">City</option>
                <option name="searchType" id="state" value="state">State</option>
                <option name="searchType" id="type" value="type">Type</option>
            </select>
        </p>

        <p>
